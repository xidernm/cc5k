= form_for @factor do |f|
  - if @factor.errors.any?
    #error_explanation
      %h2= "#{pluralize(@factor.errors.count, "error")} prohibited this factor from being saved:"
      %ul
        - @factor.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :value
    = f.text_field :value
  .field
    = f.label :statistic_id
    = f.text_field :statistic_id
  .field
    = f.label :dependency
    = f.text_field :dependency

  .actions
    = f.submit 'Save'
