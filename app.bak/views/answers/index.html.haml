%h1 Listing answers

%table
  %tr
    %th Amount
    %th User
    %th Statistic
    %th Name
    %th
    %th
    %th
  - @answers.each do |answer|
    %tr
      %td= answer.amount
      %td= answer.user_id
      %td= answer.statistic_id
      %td= answer.name
      %td= link_to 'Show', answer
      %td= link_to 'Edit', edit_answer_path(answer)
      %td= link_to 'Destroy', answer, :method => :delete, :data => { :confirm => 'Are you sure?' }

