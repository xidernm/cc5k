    #{
      @factors.to_json
    };
  var counter 	= -1;

  var displayNextQuestion = function()
  {
    if(counter < variables.length)
    {
      $('#question').text(variables[++counter].variableName);
      $('#answer').removeAttr('hidden');
      $('#answer').val('');
    }
    else
    {
      $('#question').text("There are no more questions to ask!");
