!!!
%html
  %head
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %title= content_for?(:title) ? yield(:title) : 'Carbonator'
    %meta{:name => "description", :content => "#{content_for?(:description) ? yield(:description) : 'CC5K'}"}
    = stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = csrf_meta_tags
    %body
      - # %header
      %div{"style" => "width: 1170px; margin-left: auto; margin-right: auto;"}
        = render 'layouts/carousel'
        = render 'layouts/navigation'
        %main{:role => "main"}
          = render 'layouts/messages'
          - if notice
            = notice
          - if alert
            = alert
          = yield
