      %li.sidebar-content= link_to 'Log out', destroy_user_session_path, :method => 'delete'
      %li.sidebar-content= link_to "#{current_user.firstName} #{current_user.lastName}", edit_user_registration_path
      %li.sidebar-content= link_to "Big Petrol Contributions", contribution_path, :id => 'bpc'
