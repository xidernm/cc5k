        %li.sidebar-content= link_to "Statistics", statistics_path
        %li.sidebar-content= link_to "Users", users_path
    - else
      %li.sidebar-content= link_to 'LOGIN', new_user_session_path, :id => 'login'
      %li.sidebar-content= link_to 'Join The Alliance', new_user_registration_path, :id => 'joinAlli'
    %li.sidebar-content= link_to 'Missions', wizard_path, :id => 'mish'
