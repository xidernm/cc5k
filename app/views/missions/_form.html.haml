= form_for @mission do |f|
  - if @mission.errors.any?
    #error_explanation
      %h2= "#{pluralize(@mission.errors.count, "error")} prohibited this mission from being saved:"
      %ul
        - @mission.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    %br
    = f.text_field :name
  .field
    = f.label :description
    %br
    = f.text_area :description, size: "138x20"  
  .field
    = f.label :value
    %br
    = f.number_field :value
  .field
    = f.label :min_rank
    %br
    = f.number_field :min_rank
  .actions
    = f.submit 'Save'
