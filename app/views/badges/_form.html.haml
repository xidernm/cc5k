= form_for @badge do |f|
  - if @badge.errors.any?
    #error_explanation
      %h2= "#{pluralize(@badge.errors.count, "error")} prohibited this badge from being saved:"
      %ul
        - @badge.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :description
    = f.text_field :description
  .actions
    = f.submit 'Save'
