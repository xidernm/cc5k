= form_for @region_statistic do |f|
  - if @region_statistic.errors.any?
    #error_explanation
      %h2= "#{pluralize(@region_statistic.errors.count, "error")} prohibited this region_statistic from being saved:"
      %ul
        - @region_statistic.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :usage
    = f.text_field :usage
  .actions
    = f.submit 'Save'
