= form_for @statistic do |f|
  - if @statistic.errors.any?
    #error_explanation
      %h2= "#{pluralize(@statistic.errors.count, "error")} prohibited this statistic from being saved:"
      %ul
        - @statistic.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :equation
    = f.text_field :equation
  .field
    = f.label :category_id
    = f.select :category_id, options_for_select(@categories.map{|c| [c.name,c.id]})
  .actions
    = f.submit 'Save'
