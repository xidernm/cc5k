- if current_user!=nil
  %h3
    Welcome Back To G.E.R.A Head Quarters
    = current_user.firstName
    !
  = image_tag "res_fist.png"
  %br
  %br
  %div.typeout
    %p
      The struggle against Big Petrol is ongoing 
      = current_user.firstName
      Lets keep doing our part to reduce our carbon emissions and show B.P. that we mean Business!
    %ul

- else
  %h3
    Welcome to the Global Emissions Reduction Alliance
  = image_tag "res_fist.png"
  %br
  %br
  %div.typeout{:style=>"height:70px;"}
    %p
      Welcome Brother or Sister to the Global Emissions Reduction Alliance(G.E.R.A.) Headquarters. Do you have security credentials to enter our facility, or are you here to apply for a clearance?
  %div{:style=>"width:100%; text-align:center; font-size:22px; padding-top:50px;"}
    =link_to("Here are my Credentials(Login)",new_user_session_path)
    %br/
    %br/
    =link_to("I need to apply for a clearance (Sign-up)", new_user_registration_path)
    =#link_to("I don't know (more information)",about_us_path)

    
- if current_user != nil 
  - if current_user.visited_page == nil
    - current_user.visited_page = ""
  - if !current_user.visited_page.include?(request.original_url)
    - current_user.visited_page << request.original_url
    - current_user.save
    :javascript
      $.guider({
      next: "second",
      title: "Welcome To GERA",
      description: "Hello friend, and welcome to the Global Emissions Reduction Alliance or GERA for short. This and other guides are meant to help you become familar with the site.",
      overlay: "dark",
      draggable: true,
      buttons: {
      Close: true,
      Next: {
      click: true,
      className: "primary",
      focus: true
      }
      }
      }).show()
      
:javascript
  $(document).ready(function() {
  $('.typeout').typewrite({
  'callback': function(){
  $('.typeout').css();
  },
  'delay': 5,
  'extra_char': ' '
  });
  });
